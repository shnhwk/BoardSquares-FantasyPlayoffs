@model BoardSquares.ViewModels.UpdateAccountInfoViewModel
@{
    ViewBag.Title = "Update Account Information";
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm("UpdateAccountInfo", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
     
    if (!string.IsNullOrWhiteSpace(ViewBag.UpdateAccountInfoMessage))
    {
        <div class="@(ViewBag.UpdateAccountInfoIsSuccess ? "alert alert-success" : "alert alert-danger")">
            @ViewBag.UpdateAccountInfoMessage
        </div>
    }
     
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.WeeklyUpdates, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.WeeklyUpdates, new { style = "height: 20px; width: 20px;" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Update" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
